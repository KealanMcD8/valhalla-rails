<h1>Workouts for <%= @user.name %></h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Duration</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @workouts.each do |workout| %>
      <tr>
        <td><%= workout.date %></td>
        <td><%= workout.duration %> minutes</td>
        <td><%= workout.notes %></td>
        <td><%= link_to 'Show', user_workout_path(@user, workout) %></td>
        <td><%= link_to 'Edit', edit_user_workout_path(@user, workout) %></td>
        <td><%= link_to 'Destroy', user_workout_path(@user, workout), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Workout', new_user_workout_path(@user) %>

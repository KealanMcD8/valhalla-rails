<%= form_with(model: @exercise, url: exercises_path) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :description %>
  <%= form.text_area :description %>

  <%= form.label :primary_muscle_group_id, "Primary Muscle Group" %>
  <%= form.collection_select :primary_muscle_group_id, MuscleGroup.all, :id, :name, prompt: "Select a primary muscle group" %>

  <%= form.label :secondary_muscle_group_ids, "Secondary Muscle Groups" %>
  <%= form.collection_select :secondary_muscle_group_ids, MuscleGroup.all, :id, :name, { prompt: "Select secondary muscle groups" }, { multiple: true } %>

  <%= form.label :equipment_ids, "Equipment" %>
  <%= form.collection_select :equipment_ids, Equipment.all, :id, :name, { prompt: "Select equipment" }, { multiple: true } %>

  <%= form.label :image_url %>
  <%= form.text_field :image_url %>

  <%= form.label :video_url %>
  <%= form.text_field :video_url %>

  <%= form.label :instructions %>
  <%= form.text_area :instructions %>

  <%= form.submit "Create Exercise" %>
<% end %>

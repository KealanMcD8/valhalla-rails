<h1>Exercise List</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.name %></td>
        <td><%= exercise.description %></td>
        <td><%= button_to "Delete", exercise_path(exercise), method: :delete, data: { confirm: "Are you sure you want to delete this exercise?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Create Exercise", new_exercise_path, class: "btn btn-primary" %>

<h1>Exercise List</h1>

<% @exercises.each do |exercise| %>
  <div>
    <h3><%= exercise.name %></h3>
    <p><%= exercise.description %></p>
    <!-- Display other exercise details as needed -->
    <%= button_to "Delete", exercise_path(exercise), method: :delete, data: { confirm: "Are you sure you want to delete this exercise?" } %>
  </div>
  <hr>
<% end %>

<%= link_to "Create Exercise", new_exercise_path, class: "btn btn-primary" %>
